<div id="page_wrapper">
<h1>新增日記</h1>
<%= form_for @post, :url => posts_path, class: 'form'  do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= @post.errors.count  %>個錯誤,無法存入</h2>    	<ul>
    		<% @post.errors.full_messages.each do |e| %>
    		  <li><%= e %></li>
    		<% end %>
    	</ul>
    </div>
  <% end %>

  <p>
    <%= f.label '標題' %></br>
    <%= f.text_field :title , class: 'form-control'%></br>
  </p>
  <p>
    <%= f.label '內容' %></br>
    <%= f.text_area :body , rows: '5' , class: 'form-control'%></br>
  </p>
  <%= f.submit '新增', class: 'btn btn-primary' %>
<% end %>
<%= link_to "回到首頁", posts_path %>
</div>